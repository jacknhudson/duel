<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/nav-account.ejs %>
<div class="jumbotron text-center bottomless topless">
  <div class="container">
    <h2 style="padding-top: 0px;margin-top:0px;">My Responses</h2><hr class="width-adjustment">
    <span class="message">Email: <%= user.email %></span><br><br>
    <div class="scroll-box">
      <% questions.forEach(function(r) { %>
          <h3 id="<%= r.question_id %>" class="question-content">Question</h3>
          <h4 class="dark-color"><%= r.response %></h4>
      <% }); %>
      </div>
  </div>
</div>
</body>
<script src="/scripts/questions.js"></script>
<!-- On-pageload script added in line for optimization -->
<script type="text/javascript">
  $(window).load(function(){
    var userQuestions = '<%= qids %>';
    var qidArray = userQuestions.split(",");
    for (var i = 0; i < qidArray.length; i++) {
      document.getElementById(qidArray[i]).innerHTML = questions[qidArray[i]];
    };
  });
</script> 
</html>
